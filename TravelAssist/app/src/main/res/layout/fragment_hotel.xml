<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/white_bg"
    android:clickable="true"
    android:orientation="vertical"
    android:weightSum="1">

    <LinearLayout
        android:id="@+id/hotel_detail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.1"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/hotel_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:src="@mipmap/a2b" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
            <RatingBar
                android:id="@+id/hotel_rating"
                style="?android:attr/ratingBarStyleSmall"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:isIndicator="true"
                android:numStars="5"
                android:rating="2.5"
                android:stepSize="0.1"
                android:theme="@style/RatingBar" />
                <TextView
                    android:id="@+id/total_rated_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:text="(60)"/>
            </LinearLayout>

            <TextView
                android:id="@+id/hotel_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="A2B"
                android:textSize="18sp"
                android:singleLine="true"
                android:ellipsize="end"/>

            <TextView
                android:id="@+id/hotel_cuisine"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Veg, Chettinadu"
                android:singleLine="true"
                android:ellipsize="marquee"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/hotel_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/hotel_map_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="30dp"
                android:clickable="true"
                android:text="Map View"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/hotel_info_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="50dp"
                android:clickable="true"
                android:text="Info"
                android:textSize="20sp" />

        </RelativeLayout>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/hotel_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.7"
        android:orientation="horizontal">

        <ListView
            android:id="@+id/hotel_menu_list"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

</LinearLayout>
